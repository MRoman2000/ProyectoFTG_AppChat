<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ProyectoFTG_AppChat" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorOnSurface">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="colorPrimary">@color/my_primary</item>
        <item name="colorPrimaryContainer">@color/my_primary_container</item>

        <item name="colorOnPrimaryContainer">@color/black</item>
        <item name="colorOnSecondaryContainer">@color/black</item>

        <item name="colorPrimaryFixed">@color/my_primary_container</item>

        <item name="colorOnPrimaryFixedVariant">@color/black</item>
        <item name="colorSecondary">@color/my_secondary</item>

        <item name="colorSecondaryFixed">@color/my_primary_fixed</item>
        <item name="colorSecondaryFixedDim">@color/my_primary_fixed</item>

        <!-- busqueda -->
        <item name="colorSurfaceContainerHigh">@color/my_secondary_container</item>

        <item name="toolbarStyle">@style/ToolbarStyle</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/my_primary_fixed</item>
    </style>




    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorSecondaryContainer">@color/my_secondary_fixed</item>
        <item name="colorSurfaceContainer">@color/my_primary_fixed</item>
        <item name="colorOnSurfaceVariant">@color/black</item>
    </style>


    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/black</item>
        <item name="colorSecondary">@color/rojo</item>
        <item name="android:background">@color/my_primary_fixed</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text</item>
    </style>


    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="android:background">@null</item>
    </style>


    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="CountryCodePickerStyle">
        <item name="ccp_showFlag">true</item>
        <item name="ccp_showNameCode">true</item>
        <item name="ccp_showPhoneCode">true</item>
        <item name="ccp_showFullName">false</item>
        <item name="ccp_contentColor">#000000</item>
        <item name="ccpDialog_textColor">#000000</item>
        <item name="ccp_textSize">16sp</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">30dp</item>

    </style>
</resources>