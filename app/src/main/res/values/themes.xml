<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ProyectoFTG_AppChat" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorOnSurface">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorPrimary">@color/my_green_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/my_green_primary_container</item>
        
        <item name="colorOnPrimaryContainer">@color/black</item>
        <item name="colorOnSecondaryContainer">@color/black</item>

        <item name="colorPrimaryInverse">@color/my_green_primary_inverse</item>
        <item name="colorPrimaryFixed">@color/my_green_primary_fixed</item>
        <item name="colorPrimaryFixedDim">@color/my_green_primary_fixed_dim</item>

        <item name="colorOnPrimaryFixedVariant">@color/black</item>
        <item name="colorSecondary">@color/my_green_secondary</item>

        <item name="colorSecondaryContainer">@color/my_green_secondary_container</item>

        <item name="colorSecondaryFixed">@color/my_green_secondary_fixed</item>
        <item name="colorSecondaryFixedDim">@color/my_green_secondary_fixed_dim</item>
        <item name="colorOnSecondaryFixed">@color/black</item>
        <item name="colorOnSecondaryFixedVariant">@color/black</item>
        <item name="colorTertiary">@color/my_green_tertiary</item>
        <item name="colorOnTertiary">@color/black</item>

        <!-- busqueda -->
        <item name="colorSurfaceContainerHigh">@color/my_green_secondary_fixed</item>

        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/my_green_secondary_fixed_dim</item>
    </style>


    <style name="DialogFragmentTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorSurface">@color/primary_blue</item>
        <item name="android:background">@color/secondary_blue</item>
        <item name="colorOnSurface">@color/primary_blue</item>
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text</item>
        <item name="buttonBarPositiveButtonStyle">@color/primary_blue</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button</item>
    </style>


    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="android:background">@null</item>
    </style>


    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="CountryCodePickerStyle">
        <item name="ccp_showFlag">true</item>
        <item name="ccp_showNameCode">true</item>
        <item name="ccp_showPhoneCode">true</item>
        <item name="ccp_showFullName">false</item>
        <item name="ccp_contentColor">#000000</item>
        <item name="ccpDialog_textColor">#000000</item>
        <item name="ccp_textSize">16sp</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">30dp</item>

    </style>
</resources>